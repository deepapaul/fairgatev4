{% extends '::internal/layout_login.html.twig' %}
{% set pageTitle = 'RESET_PASSWORD_PAGE_TITLE_NEW'|trans %}
{% form_theme form 'CommonUtilityBundle:Form:reset_page_login.html.twig' %}
{% block logincontent %}
    <div class="content">
        <!-- BEGIN LOGIN FORM -->        
        <form action="{{ path('internal_user_resetting_reset', {'token': token}) }}" skipDirtyCheck novalidate="novalidate" method="POST" class="login-form">            
            <input type="hidden" name="_csrf_token" value="" />
            <h3 class="form-title">{% trans %}RESET_PASSWORD_PAGE_TITLE_NEW{% endtrans %}</h3>                      

            {{ form_errors(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}
            <div class="form-actions fg-reset-pass"> 
                <button id="_submit" name="_submit" class="btn green pull-right" type="submit">
                    {% trans %}FORGOT_SUBMIT_BTN{% endtrans %} <i class="m-icon-swapright m-icon-white"></i>
                </button>
            </div>
            {{ form_rest(form) }}
        </form>
        <!-- END LOGIN FORM -->
        <!-- BEGIN FORGOT PASSWORD FORM -->
        <!-- END FORGOT PASSWORD FORM -->
        <!-- BEGIN REGISTRATION FORM -->
        <!-- END REGISTRATION FORM -->
    </div>


{% endblock %}
