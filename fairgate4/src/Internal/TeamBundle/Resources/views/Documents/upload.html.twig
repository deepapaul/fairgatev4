{% block pagecontent %}
<form id='document_uploader_form' action="">
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12" id="document-upload-error-container">
    </div>
    <div class="col-md-12 col-sm-12 col-xs-12 fg-upload-area fg-upload-area-div">
        <input type="file" id="file-uploader" name="file-uploader" style="height:0px;width:0px;visibility: hidden" multiple="multiple"/>
        <div id='document_uploader_form-content'>
            
        </div>
    </div>
</div> 
<div class="portlet-body form hide" id='action-button-container'>
    <div class="form-actions fg-upload-save fluid">
        <div class="col-md-offset-0  col-md-12 col-sm-12 col-xs-12">
            <a class="btn blue" id="document_upload_save" href="#">  {{'SAVE_FILES'|trans}} </a>
            <a class="btn default" id="document_upload_discard" href="javascript:void(0)"> {{'DISCARD_UPLOAD'|trans}} </a>
        </div>  
    </div>
</div>
</form>
        

{% endblock %} 
                    
{% block underscoretemplate %}    
    {% include 'InternalTeamBundle:Documents:templateFileUpload.html.twig' %}
{% endblock %}
