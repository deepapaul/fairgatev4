{% extends app.request.xmlHttpRequest ? '::ajax-layout.html.twig' : '::clubadmin/layout.html.twig' %}
{% set pageTitle = "GENERAL_SETTINGS"|trans %}
{% block pagecontent %}
    <!-- BEGIN CONTENT -->
    <!-- BEGIN PAGE HEADER-->
    
    <div class="row">
        <div class="col-md-12">
            <div class="portlet-body fg-theme-green">
                <!-- BEGIN PAGE TITLE & BREADCRUMB-->
                {% include 'clubadmin/breadcrumb.html.twig' with {'breadCrumb':{}} %}
                
                <!-- END PAGE TITLE & BREADCRUMB-->
               {# 
                {% include 'clubadmin/settings-tab.html.twig' with {'tabs':tabs,'active':'agelimits'} %}
                #}
               <div class="row">
                 {% set page_settings = { 'pagetitle':'true','tabs':'true'}  %}
                 {% include 'clubadmin/page-title-bar.html.twig' with {'pageTitle':pageTitle ,'page_settings': page_settings,'tabs': tabs,'hrefLink' : true, 'url':"#",'type':'agelimit' } %}
               </div>  
            </div>
        </div>
    </div>
                        
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN PAGE CONTENT-->
            <div class="portlet page fg-theme-yellow fg-common-top">
                <div class="portlet-body form fg-executive-area">
                    <form id="contactAgeLimits" skipDirtyCheck name="contactAgeLimits" class="form-horizontal" method="post" onsubmit="return false;">
                        <!-- BEGIN FORM-->
                        <div class="form-body">
                            <div class="form-group">
                                <div class="col-md-4 col-sm-4 col-xs-12 fg-label-text-right">
                                    <label class="control-label">{{ 'CONTACT_SETTINGS_AGE_LIMIT_MAJORITY'|trans }}</label>
                                </div>
                                <div class="col-md-8 col-sm-8 col-xs-12 ">
                                    <div id="majorityAgeLimit" class="spinDiv">
                                        <div class="input-group input-small">
                                            <input type="hidden" id="majorityAgeOriginal" value="{{ defaultMajorityAgeLimit }}"/>
                                            <input id="majorityAge" name="majorityAge" type="text" class="spinner-input form-control" readonly value="{{ defaultMajorityAgeLimit }}">
                                            <div class="spinner-buttons input-group-btn btn-group-vertical">
                                                <button type="button" class="btn spinner-up btn-xs ash">
                                                    <i class="fa fa-angle-up"></i>
                                                </button>
                                                <button type="button" class="btn spinner-down btn-xs ash">
                                                    <i class="fa fa-angle-down"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-4 col-sm-4 col-xs-12 fg-label-text-right">
                                    <label class="control-label">{{ 'CONTACT_SETTINGS_AGE_LIMIT_MINORITY'|trans }}</label>
                                </div>
                                <div class="col-md-8 col-sm-8 col-xs-12">
                                    <div id="minorityAgeLimit" class="spinDiv">
                                        <div class="input-group input-small">
                                            <input type="hidden" id="minorityAgeOriginal" value="{{ defaultMinorityAgeLimit }}"/>
                                            <input id="minorityAge" name="minorityAge" type="text" class="spinner-input form-control" readonly value="{{ defaultMinorityAgeLimit }}">
                                            <div class="spinner-buttons input-group-btn btn-group-vertical">
                                                <button type="button" class="btn spinner-up btn-xs ash">
                                                    <i class="fa fa-angle-up"></i>
                                                </button>
                                                <button type="button" class="btn spinner-down btn-xs ash">
                                                    <i class="fa fa-angle-down"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- END FORM-->
                        {% include 'clubadmin/savebutton.html.twig' with {'noBackLinkFlag' : true} %}
                    </form>
                </div>
            </div>
            <!-- END PAGE CONTENT -->   
        </div>
    </div>
    <!-- END CONTENT -->
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('fgcustom/js/fg_more_menu.js') }}" type="text/javascript"></script>
    <script src="{{ asset('fgassets/assets/global/plugins/fuelux/js/spinner.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('fgcustom/js/dirtyfields/jquery.dirtyFields.js') }}" type="text/javascript"></script>
    <script src="{{ asset('fgcustom/js/fg_dirtyfields.js') }}" type="text/javascript"></script>
    <script src="{{ asset('fgcustom/js/fg_more_menu.js') }}" type="text/javascript"></script>
    <script src="{{ asset('fgassets/backend/js/page/settings.js') }}" type="text/javascript"></script>  
    <script>
        var ageLimitSaveUrl = "{{ path('settings_agelimits_save') }}";
        $(document).ready(function() {
           // FgSettings.initPage();
            FgAgeLimitsSettings.initAgeLimitsSettings();
            FgPageTitlebar.init({
                title       : true,
                tab       : true,
                search     :false,
                actionMenu  : false,
                tabType  :'server'
               
            }); 
              }); 
    </script>
        });
    </script>
{% endblock %}