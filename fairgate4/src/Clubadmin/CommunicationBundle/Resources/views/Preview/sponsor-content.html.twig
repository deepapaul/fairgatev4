<tr>
    <td style="padding: 10px 5px 10px 5px;background: rgb(136, 136, 136); border-left: 2px solid #fff; border-right: 2px solid #fff;">
        <table class="twelve columns" style="border-spacing: 0; border-collapse: collapse; vertical-align: top; text-align: left; width: 100%; margin: 0 auto; padding: 0;"  cellpadding="0" cellspacing="0">
            <tr style="vertical-align: top; text-align: left; padding: 0;" align="left">
                <td style="word-break: break-word; -webkit-hyphens: auto; -moz-hyphens: auto; hyphens: auto; border-collapse: collapse !important; vertical-align: top; text-align: left; color: #222222; font-family: 'Helvetica', 'Arial', sans-serif; font-weight: normal; line-height: 19px; font-size: 14px; margin: 0; padding: 0;" align="left" valign="top">
                    <h6 style="color: rgb(255, 255, 255); font-family: 'Helvetica', 'Arial', sans-serif; font-weight: normal; text-align: left; line-height: 1.3; word-break: normal; font-size: 12px;  margin: 0; " align="left">{{ newsLetterContent.title  }}</h6>
                </td>
            </tr>
        </table>
    </td>
</tr>
<tr>
    <td>

        <table class="block-grid four-up" style="border-spacing: 0; border-collapse: collapse; vertical-align: top; text-align: left; width: 100%;  padding: 0;">
            <tbody>
                    {% set cnt = (newsLetterContent.sponsorAdWidth == 120) ? 4 : ((newsLetterContent.sponsorAdWidth == 150) ? 3 : ((newsLetterContent.sponsorAdWidth == 200) ? 2 : 1)) %}
                    {% set spImgWidth = (newsLetterContent.sponsorAdWidth == 120) ? '120' : ((newsLetterContent.sponsorAdWidth == 150) ? '150' : ((newsLetterContent.sponsorAdWidth == 200) ? '250' : '500')) %}
                    {% set tdSize = (newsLetterContent.sponsorAdWidth == 120) ? 4 : ((newsLetterContent.sponsorAdWidth == 150) ? 3 : ((newsLetterContent.sponsorAdWidth == 200) ? 2 : 1)) %}            
                    {% set spWidth = (newsLetterContent.sponsorAdWidth == 120) ? '138px' : ((newsLetterContent.sponsorAdWidth == 150) ? '186px' : ((newsLetterContent.sponsorAdWidth == 200) ? '280px' : '575px')) %}
                    {% set indexTd = 0 %}
                    {% set indexTotal = 0 %}
                    {% if newsLetterContent.sponsorAds|length > 0 %}
                        {% for key, sponsorAd in newsLetterContent.sponsorAds %}
                            {% set indexTd = indexTd + 1  %}
                            {% set indexTotal = indexTotal + 1  %}
                            {% if (indexTd == 1) %}  
                                <tr style="text-align: center !important; vertical-align: bottom; padding: 0;" >
                            {% endif %}    
                            {% if (sponsorAd.isDefault == 1) %} 
        {#                        <td style="vertical-align: middle; word-break: break-word; -webkit-hyphens: auto; -moz-hyphens: auto; hyphens: auto; border-collapse: collapse !important; text-align: left; display: inline-block!important; width: {{spWidth}}; color: #666666; font-family: 'Helvetica', 'Arial', sans-serif; font-weight: normal; line-height: 19px; font-size: 14px; margin: 0; padding: 6px 2px 2px;" >#}
                                <td style="vertical-align:middle;word-break:break-word;border-collapse:collapse!important;text-align:center;  display:inline-block;color:#222222;font-family:'Helvetica','Arial',sans-serif;font-weight:normal;          line-height:19px;font-size:14px;margin:0;padding:6px 2px 2px; width: {{spWidth}};"> 

                                    {% if (sponsorAd['contactDetails']['companyLogo'] is empty) %} 

                                        {%  if sponsorAd['contactDetails']['website'] is not empty %}


                                            <a href="#" style="color: #2ba6cb; text-decoration: none;">
                                                <img width="{{spImgWidth}}"  src="{{ baseUrlWithUrlIdentifier~'/public/image/'~spImgWidth~'/80/'~sponsorAd['contactDetails']['contactname']|escape }}" style="outline: none; text-decoration: none; -ms-interpolation-mode: bicubic; width: {{spImgWidth}}px; max-width: 100%;  clear: both; display: inline-block; border: none;" align="center">
                                            </a>


                                        {% else %}
                                            <img width="{{spImgWidth}}" src="{{ baseUrlWithUrlIdentifier~'/public/image/'~spImgWidth~'/80/'~sponsorAd['contactDetails']['contactname']|escape }}" style="outline: none; text-decoration: none; -ms-interpolation-mode: bicubic; width: {{spImgWidth}}px; max-width: 100%;  clear: both; display: inline-block; border: none;" align="center">     
                                        {% endif %}


                                    {% else %}
                                        <a href="{{ sponsorAd['contactDetails']['website'] }}" style="color: #2ba6cb; text-decoration: none;">
                                            <img width="{{spImgWidth}}" src="{{ (baseUrl~sponsorAd['contactDetails']['companyLogo']) }}" style="outline: none; text-decoration: none; -ms-interpolation-mode: bicubic; width: {{spImgWidth}}px; max-width: 100%;  clear: both; display: inline-block; border: none;" align="center">
                                        </a>

                                    {% endif %}   
                                </td>

                            {% else %}

        {#                        <td style="vertical-align: middle; word-break: break-word; -webkit-hyphens: auto; -moz-hyphens: auto; hyphens: auto; border-collapse: collapse !important; text-align: left; display: inline-block!important; width: {{spWidth}}; color: #222222; font-family: 'Helvetica', 'Arial', sans-serif; font-weight: normal; line-height: 19px; font-size: 14px; margin: 0; padding: 6px 2px 2px;" >#}
                                <td style="vertical-align:middle;word-break:break-word;border-collapse:collapse!important;text-align:center;
                                                display:inline-block;color:#222222;font-family:'Helvetica','Arial',sans-serif;font-weight:normal;
                                                line-height:19px;font-size:14px;margin:0;padding:6px 2px 2px; width: {{spWidth}};">    
                                    {% if sponsorAd.url is not empty %}
                                        <a target="_blank" href="{{ sponsorAd.url }}">
                                            <img width="{{spImgWidth}}"  src="{{ (baseUrl~sponsorAd.image) }}" style="outline: none; text-decoration: none; -ms-interpolation-mode: bicubic; width: {{spImgWidth}}px; max-width: 100%;  clear: both; display: inline-block; border: none;" align="center">
                                        </a>
                                    {% else %}
                                        <img width="{{spImgWidth}}" src="{{ (baseUrl~sponsorAd.image) }}" style="outline: none; text-decoration: none; -ms-interpolation-mode: bicubic; width: {{spImgWidth}}px; max-width: 100%;  clear: both; display: inline-block; border: none;" align="center">
                                    {% endif %}


                                </td>
                            {% endif %}  
                            {% if ((indexTd == tdSize) or (indexTotal == newsLetterContent.sponsorAds|length) ) %}  
                                </tr>
                            {% endif %}    
                            {% set indexTd = (indexTd == tdSize) ? 0 : indexTd %} 
                        {% endfor %}
                    {% endif %}

            </tbody>
        </table><br /><!-- Break Tag for row -->
    </td>
</tr>
