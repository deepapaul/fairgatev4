<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-12 fg-common-top">
        <div class="panel-primary panel-bg">
            <div class="panel-heading fg-theme-head paneldisplay">
              <h3 class="panel-title pull-left">{{ 'DOCUMENT_RENEW'|trans }}</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12 fg-common-top">
                <div class="col-md-6 col-sm-6 col-xs-12 fg-left-zero"> 
                    <div class="fileinput fileinput-new" data-provides="fileinput">
                         <span class="btn default btn-file">
                             <span class="fileinput-new">{{'FILE_UPLOAD'|trans}}</span>
                             <span class="fileinput-exists">{{'FILE_CHANGE'|trans}} </span>
                             <input type="file" class="ignore dFExclude" name="upl" title="{% trans %}DM_DOCUMENT_ALLOWED_MESSAGE{% endtrans %}" limit="1" id="upload-1" data-uploadtemplate="editDocUpload" data-name="{{ documentId }}" method="post" data-action="{{path('documents_file_upload',{'type':'document'})}}"/>
                         </span>
                         <span class="fileinput-filename"></span>
                         &nbsp; <a href="#" class="close fileinput-exists" data-dismiss="fileinput" data-fileId=""></a>
                     </div>
                </div>
                <div data-fieldarea="upload-1" class="col-md-6 col-sm-6 col-xs-12 fg-upload-area"> 
                    <ul data-files-ul>


                    </ul>
                </div>     
            </div>
        </div>
    </div>
</div>
<script type="text/template" id="editDocUpload">
    <span id="<%- id %>" class="working ">
        <div data-progress class="fg-upload-profgress">
            <div class="progress progress-striped active">
                <div aria-valuemax="100" aria-valuemin="0" aria-valuenow="40" role="progressbar" class="progress-bar progress-bar-success">
                    <span class="sr-only"></span>
                </div>
            </div>
        </div>
        <input class="hide" type="text" value="" name="<%- filename %>" data-fileName="<%- filename %>" data-key="{{ documentId }}.filename" class="ignore" />
    </span>
</script>                
<script type="text/template" id="fileUploadError">
    <div class="has-error"> <span class="help-block"><%- error %></span></div>
</script>               
<!-- END PAGE CONTENT-->
