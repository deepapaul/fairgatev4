<!-- BEGIN PAGE CONTENT-->

<div class="row">
  <div class="col-md-12">
    <div class="row">
        <div class="col-md-12  col-sm-12 col-xs-12">
            <div class="fg-createmail-fileupload hide fg-upload">
                <div class="drop">
                    {% trans %}DM_FILE_UPLOAD_TEXT{% endtrans %}
                    <input type="file" title="{% trans %}DM_FILE_UPLOAD_TEXT{% endtrans %}" class="ignore" name="upl" multiple id="upload-1" data-row-callback="documentupload.rowinit" data-uploadtemplate="imageUploadArticle" data-name="" method="post" data-action="{{path('documents_file_upload',{'type':'document'})}}"/>
                </div>    
            </div>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span>{{ 'FORM_ERROR_DISPLAY'|trans }}</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div data-fieldarea="upload-1" class="col-md-12 col-sm-12 col-xs-12 fg-upload-area fg-upload-area-div"> 
            <ul data-files-ul>
            </ul>
        </div>
    </div>
 
  </div>
</div>
<div class="portlet-body form">
    <div class="form-actions fg-upload-save fluid">
        <div class="col-md-offset-0  col-md-12 col-sm-12 col-xs-12">
            <input type="submit" class="btn blue" value="{%trans%}SAVE_FILES{%endtrans%}" id="save_changes" />
            <input type="reset" class="btn default" id="reset_changes" value="{%trans%}DISCARD_UPLOAD{%endtrans%}" />
        </div>  
    </div>
</div>
 
    <script type="text/template" id="fileUploadError">
        <div class="col-md-2 col-sm-2 col-xs-12 fg-left-zero"> 
        </div>
        <div class="col-md-5 col-sm-5 col-xs-12 fg-left-zero"> 
            <p><%- data.name %> <span class="help-block"><%- error %></span></p>
        </div>
        <div class="col-md-2 pull-right deletediv removeUpload">
            <div class="closeico" data-deletable="checknew">
                <input type="checkbox" data-parentid="<%- id %>" class="make-switch ignore">
                <label for="isDeleted"></label>
            </div>
        </div>
    </script>               
    <!-- END PAGE CONTENT-->
