<div class="modal-content">
    <div class="modal-header fg-modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title">{{ contactName }}</h4>
    </div>
    <div class="modal-body fg-modal-text">
        <div class="row">
            <div class="col-md-12">
                <div class="portlet-body form">
                    <div class="form-body">
                        <div class="form-group fg-overview-list">
                            <dl>   
                                {% for key,val in contactData %}
                                    {% set value = (val['id'] in languageAttrIds) ? languageList[val['value']] : ((val['id'] in countryFields) ? countryList[val['value']] : val['value']) %}
                                    <dt>{{ val['title'] }}</dt>
                                    <dd>{{ value }}</dd>
                                {% endfor %}
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>