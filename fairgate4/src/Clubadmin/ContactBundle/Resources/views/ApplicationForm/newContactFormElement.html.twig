<script type="text/template" id="newContactFormElement">
    <li class="list-group-item" id="formElement_<%= data.formFieldId %>" data-source="<%=(!_.isUndefined(data.source)?data.source:'')%>">
        <input type="text" class="fg-dev-newfield fg-dev-sortOrder hide fieldSort" data-key="<%- data.formId %>.<%- data.formFieldId %>.formElementSortOrder" 
                id="formElementSortOrder_<%- data.formFieldId %>" name="formElementSortOrder_<%- data.formFieldId %>" value="<%=data.formElementSortOrder%>">
        <input type="text" class="fg-dev-newfield fg-dev-fieldtype hide fieldType" data-key="<%- data.formId %>.<%- data.formFieldId %>.form_field_type" 
                id="formFieldType_<%- data.formFieldId %>" name="formFieldType_<%- data.formFieldId %>" value="contact">
        
            
            <i class="fa fa-2x fa-ellipsis-v fg-sort-row fg-dev-field-sort-handle"></i> 
        <div class="fg-delete-row" element_type='CF'>
            <input type="checkbox" class="make-switch fg-dev-field-delete fg-dev-newfield fieldDelete" data-key="<%- data.formId %>.<%- data.formFieldId %>.isDeleted" id="isDeleted_<%- data.formFieldId %>" name="isDeleted_<%- data.formFieldId %>" >
            <label for="isDeleted_<%- data.formFieldId %>"></label>
        </div>
        <div class="fg-sortable-list-item-wrapper">
                <div class="col-sm-3">
                        <select name="<%- data.formFieldId %>_fieldType"   id="cf_<%- data.formFieldId %>" class="form-control fg-dev-newfield form_field_type fg_dev_contact_field" data-key="<%- data.formId %>.<%- data.formFieldId %>.attributeId" fieldId = "<%- data.formFieldId %>">
                        <option value="default">{{'STATISTICS_SELECT'|trans}}</option>
                          <% _.each(data.fieldArray, function(fieldValues,optkey) { %> 
                              <optgroup label="<%= optkey %>">
                           <%  _.each(fieldValues, function(fieldValue,optkey)   { %>  
                           <option value="<%= fieldValue.id %>" opt_type="<%= fieldValue.type %>" field_type='CF'><%= fieldValue.title %></option>
                           <% }); %>
                             </optgroup>
                        <% }); %>
                       
                    </select>
                </div>
               
                <div class="col-sm-2 text-right pull-right <%=(data.fieldType == 'contactfield')?'hide':''%>" id="isActive_<%- data.formFieldId %>_container">
                    <label class="switch-light switch-light-sm fg-onoff-switch" onClick="">
                        <input type="checkbox" name="<%- data.formFieldId %>_isActive" id="isActive_<%- data.formFieldId %>" class="make-switch fg-dev-newfield" data-key="<%- data.formId %>.<%- data.formFieldId %>.isActive" <%=(data.formElementIsActive == 0)?'':'checked="checked"'%>>
                        <span> 
                            <span>{{'ON'|trans}}</span>
                            <span>{{'OFF'|trans}}</span>                                                                    
                        </span>
                        <a class="btn btn-primary"></a>
                    </label>
                </div>
         <div class="col-sm-2 col-sm-offset-1 pull-right <%=(data.fieldType == 'contactfield')?'hide':''%>" id="typeOptions_<%- data.formFieldId %>_container" >
                    <a href="#typeOptions-<%= data.formFieldId %>" option_type='CF' class="fg-toggle-link collapsed" data-toggle="collapse"><i class="fa fa-minus-square-o"></i> {{'CMS_FORM_FIELD_OPTION_LINK'|trans}}</a>
                </div>
             
        </div>
        <div id="typeOptions-<%= data.formFieldId %>" class="collapse row fg-clear">
               


        </div>
    </li>
</script>

