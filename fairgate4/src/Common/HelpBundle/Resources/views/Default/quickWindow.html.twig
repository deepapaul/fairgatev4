<div id="helpModal" class="modal fg-help-content-modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" >
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="false"></button>
                <h4 class="modal-title fg-clear">{{ 'HELP_QUICKWINDOW_TITLE'|trans }}</h4>

            </div>
            <div class="modal-body">

                {% include 'CommonHelpBundle:Default:quickWindowTabs.html.twig' %}
                
                <div class="portlet box fg-portlet-ash fg-dev-help-footer">
                                                        <div class="portlet-title ">
                                                          <div class="caption">
                                                            {{ 'HELP_LISTGROUP_TITLE'|trans }}
                                                          </div>
                                                        </div>
                                                        <div class="portlet-body">
                                                            <div class="row fg-metronic-dashboar-icons">
                                                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                                                    <div class="dashboard-stat blue">
                                                                        <div class="visual">
                                                                            <i class="fa fa-comments"></i>
                                                                        </div>
                                                                        <div class="details">
                                                                            <div class="number">
                                                                                <span data-counter="counterup" data-value="">{{ 'HELP_VIDEOS_TITLE'|trans }} </span>
                                                                            </div>
                                                                            <div class="desc"> {{ 'HELP_VIDEOS_SUBTITLE'|trans }} </div>
                                                                        </div>
                                                                        <a class="more" target="_blank" href="{{helpUrls['video']['playlists']['videotutorials']}}"> 
                                                                            <i class="fa fa-arrow-circle-right"></i>{{ 'HELP_VIEW_DETAILS'|trans }}
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                                                    <div class="dashboard-stat red fg-help-disabled">
                                                                        <div class="visual">
                                                                            <i class="fa fa-bar-chart-o"></i>
                                                                        </div>
                                                                        <div class="details">
                                                                            <div class="number">
                                                                                <span data-counter="counterup" data-value="">{{ 'HELP_IDEAL_CLUB_TITLE'|trans }}</span></div>
                                                                            <div class="desc"> {{ 'HELP_IDEAL_CLUB_SUBTITLE'|trans }} </div>
                                                                        </div>
                                                                        <a class="more" href="javascript:;"> 
                                                                            <i class="fa fa-arrow-circle-right"></i>{{ 'HELP_COMING_SOON'|trans }}
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                                                    <div class="dashboard-stat green">
                                                                        <div class="visual">
                                                                            <i class="fa fa-shopping-cart"></i>
                                                                        </div>
                                                                        <div class="details">
                                                                            <div class="number">
                                                                                <span data-counter="counterup" data-value="">{{ 'HELP_HANDBOOK_TITLE'|trans }}</span>
                                                                            </div>
                                                                            <div class="desc"> {{ 'HELP_HANDBOOK_SUBTITLE'|trans }} </div>
                                                                        </div>
                                                                        <a class="more" href="{{helpUrls['manual'][currentModule]|default(helpUrls['manual']['general'])}}" target="_blank"> 
                                                                            <i class="fa fa-arrow-circle-right"></i>{{ 'HELP_VIEW_DETAILS'|trans }}
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                                                    <div class="dashboard-stat purple fg-help-disabled">
                                                                        <div class="visual">
                                                                            <i class="fa fa-globe"></i>
                                                                        </div>
                                                                        <div class="details">
                                                                            <div class="number"> +
                                                                                <span data-counter="counterup" data-value="">{{ 'HELP_SIDEBAR_TUTORIAL_TITLE'|trans }}</span> </div>
                                                                            <div class="desc"> {{ 'HELP_SIDEBAR_TUTORIAL_SUBTITLE'|trans }} </div>
                                                                        </div>
                                                                        <a class="more" href="javascript:;"> 
                                                                            <i class="fa fa-arrow-circle-right"></i>{{ 'HELP_COMING_SOON'|trans }}
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                      </div>
            </div>
            <div class="modal-footer" >
                {% if quickwindowVisibilty == 'checked' and contactId != 1%}
                    <label for="checkboxes-visibilty" class="fg-dont-show-again {% if(isRegistrationPeriod == 1) %} hide {% endif %} ">
                        <input type="checkbox" name="checkboxes-dontshow" id="checkboxes-dontshow" class ="fg-quickwindow-check" value="0"  data-toggle="tooltip">
                        {{'DONT_SHOW_MESSAGE_TEXT'|trans}}
                    </label>
                {% endif %}
                <button type="button" data-dismiss="modal" class="btn default"> {{'CLOSE_BUTTON_TEXT'|trans}}</button>
            </div>
        </div>
    </div>
</div>
{% block javascripts %}
<script type="text/javascript">
FgTooltip.init()
var isRegistrationPeriod = '{{ isRegistrationPeriod }}';
if(isRegistrationPeriod == '1') {
    $(document).on('click', '.fg-dev-help-tabs', function() {
        if( $(this).attr('name') == 'welcome') {
            $('.fg-dev-help-footer').addClass('hide');
        } else {
            $('.fg-dev-help-footer').removeClass('hide');
        }
    });
    
    $(document).ready(function()
    {
        if($('.fg-dev-help-tabs active').attr('name') == 'welcome') {
            $('.fg-dev-help-footer').addClass('hide');
        }
    });
}

</script>
{% endblock %}