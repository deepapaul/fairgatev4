{% block form_errors %}
{% for error in errors %}
<span class="help-block">{{ error.messageTemplate|trans(error.messageParameters, 'validators') }}</span>
{% endfor %}
{% endblock form_errors %}

{% block form_row %}
{% spaceless %}    
    <div class="form-group {% if errors %}has-error{% endif %} ">
        {{ form_label(form, null, { 'label_attr': {'class': 'control-label col-md-3'} }) }}  
        <div class="col-md-4">
            {{ form_widget(form, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form) }}
        </div>       
    </div>
{% endspaceless %}
{% endblock form_row %}

