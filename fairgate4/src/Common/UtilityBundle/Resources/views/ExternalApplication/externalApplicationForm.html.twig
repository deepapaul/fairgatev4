                autoclose: true, 
                language: 'de', 
                format: FgLocaleSettingsData.jqueryDateFormat, 
                weekStart: 1, 
                clearBtn: true
            };
            FgExternalAppl.handleDatepicker(dateFormat);

        });

        function saveChanges()
        {
            var applSavePath = '{{path('external_application_save')}}';
            var dataArray = $('#externalApplication').serializeArray();
            FgXmlHttp.post(applSavePath, dataArray, false, false, failcallBack, 2);
        }

        /* error handler function */
        function errorHandler()
        {
            var employerText = jQuery.trim($("#employer-other").val());
            var requiredText = jstranslations.VALIDATION_THIS_FIELD_REQUIRED;
            if (($("#other").is(':checked')) && (employerText.length == 0))
            {
                $("#employer-other-text").attr('required', 'required');
                
            }
        }

        function failcallBack()
        {
            var emailValidText = '{{'EXTERNAL_APPLICATION_EMAIL_EXISTS'|trans}}';
            $(".fg-ext-email-error").addClass('has-error');
            $('<span id="email-exist-error" class="help-block">' + emailValidText + '</span>').insertAfter($('.fg-ext-email-input'));
            FormValidation.init('externalApplication', 'saveChanges', 'errorHandler');
