        <script>

        $(document).ready(function () {
            $('.selectpicker').selectpicker();
            $(".uniform").uniform();
            FormValidation.init('externalApplication', 'saveChanges', 'errorHandler');
            $("#employer-number-text").prop('required', true);    
            dateFormat = {
