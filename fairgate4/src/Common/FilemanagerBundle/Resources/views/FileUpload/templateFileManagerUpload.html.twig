<script type='template' id='filemanager-img-upload'>
<li class="fg-filemanager-upload-item row filecontent" id="<%- id %>">
    <div class="col-sm-5  col-lg-5 form-group fg-filemanager-item-name">
            <input id= "fg-uploadfilemanager-name" name="fileName[]" type="text" placeholder="" value="<%- name %>" class="form-control">
    </div>
    <div class="col-sm-3  form-group col-sm-offset-1 fg-upload-progress">
        <div class="progress fg-active-IB fg-v-top">
            <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
            </div>
        </div>
    </div>
    <div class="col-sm-3 fg-replacewith-errormsg"> <span class="fg-file-size"> <%- size %> </span></div>
    <input name="randFileName[]" type="hidden" value="<%- value %>">
    <input name="fileSize[]" type="hidden" value="<%- size_raw %>">
    <input name="fileManagerId" id="fileManagerId" type="hidden" value="">
    <a href="javascript:void(0)" class="fg-delete"><i class="fa fa-times-circle fa-2x"></i></a>
</li>
</script>
<script type="text/template" id="filemanager-uploader-errorlist-template">   
    <% if(errors.length > 0) { %>
        <% _.each(errors, function(error) { %>
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <% if (error == 0) { %> {{'FILEMANAGER_UPLOAD_FILETYPE_ERROR'|trans}} <% } %>
                <% if (error == 1) { %> {{'FILEMANAGER_UPLOAD_VIRUS_ERROR'|trans}} <% } %>
                <% if (error == 2) { %> {{'VIRUS_FILE_CONTACT'|trans}} <% } %>
            </div>
        <% }) %> 
    <% } %>   
</script>
<script type="text/template" id="fileUploadErrorFM">
    <p><span class="help-block">
        <% if (error == 0) { %> {{'FILEMANAGER_UPLOAD_FILETYPE_ERROR'|trans}} 
        <% } else if (error == 1) { %> {{'FILEMANAGER_UPLOAD_VIRUS_ERROR'|trans}} 
        <% } else if (error == 2) { %> {{'VIRUS_FILE_CONTACT'|trans}} 
        <% } else { %> <%- error %> <% } %></span></p>
</script>