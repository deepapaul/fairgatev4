<html lang="en" class="no-js"><!--<![endif]--><!-- BEGIN HEAD -->
    <head>
        <meta charset="utf-8"/>
        <title>{{'NOTIFICATION_VIRUSLOG_MAIL_TITLE'|trans}}</title>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
        <meta content="" name="description"/>
        <meta content="" name="author"/>

        <link rel="shortcut icon" href="img/favicon.ico" />
    </head>
    <!-- BEGIN BODY -->
    <body style="">
        <table  style="background-color: #eee;font-family: Calibri,Arial,sans-serif;padding: 20px;width: 100%;">
            <tr>
                <td>
                    <table cellpadding="0" cellspacing="0" border="0" >
                        <tr>
                            {% if(logoURL is defined and logoURL is not empty) %}
                                <td style="padding-bottom:12px;padding-left: 1px;font-family: Calibri,Arial,sans-serif;">
                                    <img style="max-width: 100px;" width="100" src="{{ logoURL }}"  />
                                </td>
                                <td><h1 style="margin: 0; padding-left: 28px; font-size: 30px; font-weight: 500; margin-top: -4px;font-family: Calibri,Arial,sans-serif;">Fairgate AG</h1></td>
                            {% endif %}
                        </tr>
                    </table>
                    <table style="background-color:#fff; border:1px solid #e1e1e1; width:560px;" cellpadding="0" cellspacing="0">
                        <tr>
                            <td style="padding:20px; font-family: Calibri,Arial,sans-serif;">
                                <p>{{salutation }},</p>
                            </td>  
                        </tr>
                        
                        {% if logDetailArray.unsafe is defined and logDetailArray.unsafe is not empty %}
                            <tr>
                                <td style="font-family: Calibri,Arial,sans-serif;" >
                                    <ul>
                                        <li>
                                            {{'FILE_RESPONSE_STATUS_UNSAFE'|trans}}
                                            {% for log in logDetailArray.unsafe.club %}
                                                <ul>
                                                    <li>{{log.clubname}} Contacts: (<span>{{log.contact|join}}</span>)</li>
                                                </ul>
                                            {% endfor %}
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endif %}
                        
                        {% if logDetailArray.not_responding is defined and logDetailArray.not_responding is not empty %}
                            <tr>
                                <td style="font-family: Calibri,Arial,sans-serif;">
                                    <ul>
                                        <li>
                                            {{'FILE_RESPONSE_STATUS_NOTRESPONDING'|trans}}
                                            {% for log in logDetailArray.not_responding.club %}
                                                <ul>
                                                    <li>{{log.clubname}} Contacts: (<span>{{log.contact|join}}</span>)</li>
                                                </ul>
                                            {% endfor %}
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endif %}
                        
                        {% if logDetailArray.exception is defined and logDetailArray.exception is not empty %}
                            <tr>
                                <td style="font-family: Calibri,Arial,sans-serif;">
                                    <ul>
                                        <li>
                                            {{'FILE_RESPONSE_STATUS_EXCEPTION'|trans}}
                                            {% for log in logDetailArray.exception.club %}
                                                <ul>
                                                    <li>{{log.clubname}} Contacts: (<span>{{log.contact|join}}</span>)</li>
                                                </ul>
                                            {% endfor %}
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endif %}
                    </table>
                </td>
            </tr>
    </body>
    <!-- END BODY -->
</html>