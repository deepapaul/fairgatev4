<div class="modal fade" id="add-link-modal" tabindex="-1" role="basic" aria-hidden="true" data-id="">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title fg-modal-title">{{'CMS_IMAGE_LINK_POPUP'|trans}}</h4>
            </div>
            <div class="modal-body">
                <div class="form-group fg-clear fg-external-link-form">
                    <div class="fg-label-valign col-sm-4 col-lg-3">   
                        <label for="addLinkRadio" class="control-label fg-LH-20">
                            <input type="radio" name="addLinkRadio" id="externalLink" checked value="externalLink">
                            {{'CMS_IMAGE_EXTERNAL_LINK'|trans}}
                        </label>
                    </div>
                    <div class="col-sm-8 fg-external-required">
                        <input type="text" class="form-control input-md externalLinkText" value="" placeholder="http://">
                    </div>
                </div>
                <div class="form-group fg-clear fg-internal-link-form">
                    <div class="fg-label-valign col-sm-4 col-lg-3">   
                        <label for="addLinkRadio"  class="control-label fg-LH-20">
                            <input type="radio" name="addLinkRadio" id="internalLink" value="internalLink" >
                            {{'CMS_IMAGE_INTERNAL_LINK'|trans}}
                        </label>
                    </div>
                    <div class="col-sm-8 fg-internal-required">
                        <select name="repeat-type"  class="form-control selectpicker internalLinkSelect">
                            <option value="">{{'SELECT_DEFAULT'|trans}}</option>
                            {% for key, value in internalLinkArr %}
                                {% if(isSuper)%}
                                    <option data-hasAccess="1" data-pageId="{{value.pageId}}" value="{{key}}">{{value.title}}</option>
                                {% else %}
                                    {% if(fgtwig.inArray(key,myPages))%}
                                        <option data-hasAccess="1" data-pageId="{{value.pageId}}" value="{{key}}">{{value.title}}</option>
                                    {% else %}
                                        <option data-hasAccess="0" data-pageId="{{value.pageId}}" value="{{key}}">{{value.title}}</option>
                                    {% endif %}
                                {% endif %}
                            {% endfor %}
                        </select>  
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn default" data-dismiss="modal">{{'CANCEL'|trans}}</button>
                <button type="button" class="btn saveBtn green">{{'SAVE'|trans}} </button>
            </div>
        </div>
    </div>
</div>
            