<script type='template' id='tm-color-scheme-create-edit'>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title fg-modal-title"><%-title%></h4>
    </div>
    <div class="modal-body  fg-dev-color-scheme-popup  form-horizontal">
    <% _.each(colorSchemes, function(val,key) { %>   
        <div class="form-group fg-clear">
            <label class="control-label text-right fg-label-valign col-sm-5" ><span class="fg-dotted-br fg-cursr-pointer" data-toggle="tooltip"   title="<%-editcolorSchemeTooltipTrans[key]%>"><%-val['title']%></span></label>
            <div class="col-md-5 col-sm-6">
                <input type="text" class="form-control fg-inputheight mini-color input-md fg-bg-white" data-keyval="<%-key%>" value="<%-val['value']%>" >
            </div>
        </div>
    <% }) %>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn default" data-dismiss="modal">{{'CANCEL'|trans}}</button>
        <button type="button" class="btn green" data-flag=<%-flag%> <% if(flag=='edit') { %> data-id=<%-colorId%>  <% } %> id="save-create-modal">{{'SAVE'|trans}}</button>
    </div>
</script>